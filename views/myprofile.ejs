<div class="account-container">
    <h1 class="profile-title">MY PROFILE</h1>
    <div class="tab">
        <button class="tablinks" onclick="openTab(event, 'Profile')">Profile</button>
        <button class="tablinks" onclick="openTab(event, 'Orders')">Orders</button>
        <button class="tablinks" onclick="openTab(event, 'Settings')">Settings</button>
        <button class="tablinks" onclick="openTab(event, 'Offers')">Offers</button>
    </div>

    <div id="Profile" class="tabcontent">
        <h3 class="info">Profile Information</h3>
        <form action="/profile/update" method="POST">
            <label for="username">User Name:</label><br>
            <input type="text" id="username" name="username" value="<%= user.username %>" readonly><br>
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" value="<%= user.email %>" readonly><br>
            <label for="phone">Phone:</label><br>
            <input type="tel" id="phone" name="phone" value="<%= user.phoneNumber %>" readonly><br>
            <label for="address">Address:</label><br>
            <textarea id="address" name="address" rows="4" readonly><%= user.address ? `${user.address.street}, ${user.address.city}, ${user.address.state}, ${user.address.buildingNo}` : '' %></textarea><br>
        </form>
    </div>

    <div id="Settings" class="tabcontent">
        <h3>Account Settings</h3>
    
        <!-- Change Password Button -->
        <button data-target="password-form">Change Password</button>
        <div id="password-form" class="form-container">
            <form action="/profile/<%= user.id %>?_method=PUT" method="post">
                <label for="oldPassword">Old Password:</label><br>
                <input type="password" id="oldPassword" name="oldPassword" required><br>
                <label for="newPassword">New Password:</label><br>
                <input type="password" id="newPassword" name="newPassword" required><br>
                <label for="confirmPassword">Confirm New Password:</label><br>
                <input type="password" id="confirmPassword" name="confirmPassword" required><br>
                <button type="submit">Confirm</button>
            </form>
        </div>
    
        <br><br>
    
        <!-- Change Username Button -->
        <button data-target="username-form">Change Username</button>
        <div id="username-form" class="form-container">
            <form action="/profile/<%= user.username %>" method="post">
                <input type="hidden" name="_method" value="PUT">
                <label for="newUsername">New Username:</label><br>
                <input type="text" id="username" name="username" required><br><br>
                <button type="submit">Confirm</button>
            </form>
        </div>
    
        <br><br>
    
        <!-- Change Phone Button -->
        <button data-target="phone-form">Change Phone</button>
        <div id="phone-form" class="form-container">
            <form action="/profile/<%= user.username %>?_method=PUT" method="post">
                <label for="newPhone">New Phone:</label><br>
                <input type="tel" id="newPhone" name="newPhone" required><br><br>
                <button type="submit">Confirm</button>
            </form>
        </div>
    
        <br><br>
    
        <!-- Change Address Button -->
        <button data-target="address-form">Change Address</button>
        <div id="address-form" class="form-container">
            <form action="/profile/update?_method=PUT" method="post">
                <label for="street">Street:</label><br>
                <input type="text" id="street" name="street" required><br><br>
                <label for="city">City:</label><br>
                <input type="text" id="city" name="city" required><br><br>
                <label for="state">State:</label><br>
                <input type="text" id="state" name="state" required><br><br>
                <label for="buildingNo">Building No:</label><br>
                <input type="text" id="buildingNo" name="buildingNo" required><br><br>
                <button type="submit">Confirm</button>
            </form>
        </div>
    </div>    

