<div class="CART" id="CART">
    <h2 class="pcart">Your Cart <i class="fa-solid fa-bag-shopping"></i></h2>
    <div class="popupp">
        <span class="close-btn" onclick="hidePopup(['CART'])">&times;</span>
        
        <% if (typeof cart === 'undefined') { %>
            <h2>Please login first.</h2>
        <% } else if (cart && cart.items && cart.items.length === 0) { %>
            <h2>Your cart is empty.</h2>
        <% } else if (cart && cart.items && cart.items.length > 0) { %>
            <% cart.items.forEach(item => { %>
                <div class="product-display">
                    <img src="<%= item.product.image %>" alt="<%= item.product.name %> image" width="218" height="200" class="imgg">
                    <div class="product1">
                        <h3><%= item.product.name %></h3>
                        <h3>Price: <span id="price_<%= item.id %>"><%= item.product.price.toFixed(2) %></span>$   Quantity: <span id="quantity<%= item._id %>"><%= item.quantity %></span></h3>
                        <!-- Example buttons to change quantity -->
                        <button type="button" class="remove" onclick="changeQuantity('<%= item._id %>', -1)">-</button>
                        <button type="button" class="add" onclick="changeQuantity('<%= item._id %>', 1)">+</button>
                    </div>
                </div>
            <% }); %>
            
            <div class="total">
                <h3>Total: <span id="total"></span>$</h3>
            </div>
            <div class="checkout">
                <button type="button" onclick="window.location.href = '/checkout'" class="sub">Proceed to Checkout</button>
            </div>
        <% } %>
        
    </div>
</div>
<script src="js/cart.js"></script>
