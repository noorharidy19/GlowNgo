 <div class="WISHLIST" id="WISHLIST">
    <h2 class="pcart"> Your Wishlist&nbsp; <i class="fa-regular fa-heart"></i>  </h2>
    <div class="popupp">
        <span class="close-btn" onclick="hidePopup(['WISHLIST'])">&times;</span>
        <% if (typeof wishlist === 'undefined') { %>
            <h2>Please login first.</h2>
        <% } else if (wishlist && wishlist.items && wishlist.items.length === 0) { %>
            <h2>Your wishlist is empty.</h2>
        <% }else if (wishlist.items.length > 0) { %>
            <% wishlist.items.forEach(item => { %>
                <div class="product-display">
                    <img src="<%= item.product.image %>" alt="<%= item.product.name %> img" width="218" height="200" class="imgg1" id="c<%= item.product._id %>">
                    <div class="product1">
                        <h3><%= item.product.name %></h3>
                        <h3>Price: <span id="price1"><%= item.product.price %></span>$</h3>
                        <div class="circle-container">
                            <% item.product.images.forEach((image, index) => { %>
                                <img class="circle-image" src="<%= image %>" alt="Product image <%= index + 1 %>" onclick="showShade(['c<%= item.product._id %>'], ['imgg1'])">
                            <% }) %>
                        </div>
                        <button type="button" class="re" onclick="removeFromWishlist('<%= item.product._id %>')">Remove</button>
                        <button type="button" class="ad" onclick="addToCart('<%= item.product._id %>')">Add to Cart</button>
                    </div>
                </div>
            <% }) %>
            <div class="ADD">
                <button type="button" onclick="addAllToCart()">ADD ALL TO CART</button>
            </div>
            <script id="wishlistProductIds" type="application/json">
                <%= JSON.stringify(wishlist.items.map(item => item.product._id)) %>
            </script>
        <% } else { %>
            <p>Your wishlist is empty.</p>
        <% } %>
    </div>
</div>

