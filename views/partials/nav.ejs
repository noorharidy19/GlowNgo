<html>
  
<header class="myElement">
    <a href="#" class="logo" ><img src="images/logo.jpeg" width="180" height="80"></a>
    <span class="search">
      <form action="/search" method="GET">
          <input type="text" name="query" placeholder="Search" required>
          <button type="submit">
              <i class="fa fa-search"></i>
          </button>
      </form>
  </span>
    <nav class="navigation">
      <label class="switch">
        <input type="checkbox" id="dark-mode-toggle" onchange="toggleDarkMode();">
        <span class="slider round"></span>
        <i class="fa-regular fa-moon"></i>
        
      </label>
      <div id="overlay" style="display: none;"></div>
      <% if (!user) { %>
        <a href="#" class="nav1" id="signInIcon" onclick="showPopupSignin('popupContainerSignIn')"><i id="signInIconImage" class="fa-solid fa-user"></i></a>
      <% } else { %>
        <a href="/logout" class="nav1" id="signOutIcon"><i class="fa-solid fa-sign-out"></i></a>
        <a href="/myprofile" class="nav1" id="myProfileIcon"><i class="fa-solid fa-user"></i></a>
        <% if (user.type === 'customer') { %>
          <!-- Links visible only to customer users -->
          <a href="#" class="nav1" title="shopping cart" onclick="showPopup(['CART'])"><i class="fa-solid fa-cart-shopping"></i></a>  
          <a href="#" class="nav1" title="Wishlist" onclick="showPopup(['WISHLIST'])"><i class="fa-solid fa-heart"></i></a>
        <% } %>
        <% if (user.type === 'admin') { %>
          <!-- Links visible only to admin users -->
          <a href="/admin" class="nav1">Dashboard</a>
        <% } %>
      <% } %>
      <a href="/Home" class="nav1">Home</a>
      <a href="/Products" class="nav1">Products</a>
      <a href="/About" class="nav1">About</a>
      
      
</header>
